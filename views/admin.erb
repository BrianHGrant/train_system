<h1>Train System Administration</h1>
<% if @trains.any?() %>
  <table>
    <% @trains.each() do |train| %>
      <tr>
        <td><%= train.id() %></td><td><%= train.name() %></td>
      </tr>
    <% end %>
  </table>
  <% else %>
    <h3>There are no trains in the database; Add a train below</h3>
<% end %>

<a href="/trains/new">Add train</a>
